<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PokeMauiDex.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PokeMauiDex.App.Views"
    xmlns:local="clr-namespace:PokeMauiDex.App"
    Shell.FlyoutBehavior="Flyout"
    Title="PokeMauiDex.App">
    <FlyoutItem Title="Pokedex">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="List">
        <ShellContent Title="Pokedex List" Route="PokedexListPage" ContentTemplate="{DataTemplate views:PokedexListPage}" />
    </FlyoutItem>

</Shell>
